params {
    // Input parameters
    input_fasta = null
    outdir = "${baseDir}/../results"
    
    // Paths to required databases and tools (from config.py)
    blast_dir = null
    spot1d_dir = null
    interpro_dir = null
    swiss_prot_db = null
    
    // Resource parameters
    max_memory = '128.GB'
    max_cpus = 16
    max_time = '24.h'
}

profiles {
    standard {
        process.executor = 'local'
    }
    
    conda {
        conda.enabled = true
    }
}

// Include module-specific configs
includeConfig 'conf/hfrgo.config'
includeConfig 'conf/plmgo.config'
includeConfig 'conf/ppigo.config'

// Process-specific resource configuration
process {
    withLabel: gpu {
        containerOptions = '--gpus all'
    }
}